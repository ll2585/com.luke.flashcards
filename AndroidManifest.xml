<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    
    package="com.luke.flashcards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	<uses-permission android:name= "android.permission.INTERNET" /> 
	<uses-permission android:name= "android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name= "android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.luke.flashcards.CardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.luke.flashcards.TableOfContents"
            android:label="@string/title_activity_table_of_contents" >
        </activity>
        <activity
            android:name="com.luke.flashcards.FinishScreenActivity"
            android:label="@string/title_activity_finish_screen" >
        </activity>
        <activity
            android:name="com.luke.flashcards.MainScreenActivity"
            android:label="@string/title_activity_main_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>